---
const { title, description, photo_number } = Astro.props;

import Meta from "../components/Meta.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/desert.css";

var backgroundImage = JSON.stringify(`/desert_2400_${photo_number}.jpg`);
---

<!doctype html>
<html lang="en">
  <head> </head>
  <Meta title={title} , description={description} />

  <style define:vars={{ backgroundImage }}>
    html {
      height: 100%;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    article {
      display: grid;
      width: 100%;
    }

    .desert {
      flex-grow: 1;
      background: var(--desert), url(var(--background_image));
      padding: 0px;
      background-repeat: no-repeat;
      background-position: center top;
      background-size: auto;
    }

    p {
      color: var(--maroon700);
      font-family: "Poppins", sans-serif;
    }
  </style>
  <body>
    <div class="desert">
      <Header title={title} />
      <slot />
      <Footer />
    </div>
  </body>


</html>
