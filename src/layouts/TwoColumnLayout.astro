---
const { title, leadphoto, maincolor } = Astro.props;

import Meta from "../components/Meta.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/desert.css";
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title="{title}" />

    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      article {
        display: grid;
        width: 100%;
      }

      .desert {
        flex-grow: 1;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: auto;
        background: var(--desert) url("/desert_2400_3.jpg");
        padding-top: 120px 24px 24px 0;
      }

      h2 {
        font-family: "JunkDog", monospace;
        text-align: right;
        flex: none !important;
        padding: 48px;
      }

      p {
        color: var(--maroon700);
        font-family: "Poppin", sans-serif;
      }
    </style>
  </head>

  <body>
    <div class="desert">
      <Header />
      <div id="page-title"><h2>About Me</h2></div>
      <slot />
    </div>
  </body>
</html>
