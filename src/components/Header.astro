---
const { title, slug } = Astro.props;
---

<header>
  <navigation>
    <ul class="menu">
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/resume">Resume</a></li>
      <li><a href="/uses">Uses</a></li>
    </ul>
  </navigation>

  <logo-box>
    <h1>TiMOTHY EATON</h1>
    <p>OPERATIONS MANAGEMENT | FULL STACK</p>
  </logo-box>

  <svg-fixer-box>
  <svg-top-divider class="custom-shape-divider-top-1713269180">
    <svg
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
    >
      <path d="M1200 0L0 0 892.25 114.72 1200 0z" class="shape-fill"></path>
    </svg>
  </svg-top-divider>
</svg-fixer-box>
</header>
<style>
  svg-fixer-box {
    position: relative;
  }
  .custom-shape-divider-top-1713269180 {
    width: 100%;
    overflow: hidden;
    line-height: 0;
    clear: both;
    border-top:0px;
    margin-top: 0px;
  }

  .custom-shape-divider-top-1713269180 svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 51px;
  }

  .custom-shape-divider-top-1713269180 .shape-fill {
    fill: var(--slate500);
  }

  header {
    background-color: var(--slate500);
    color: var(--moccasin300);
    flex: none !important;
    width: 100%;
    height: 150px;
    display: block;
  }

  header p {
    padding: 0;
    margin-bottom: 0px;
    line-height: 0;
    margin-top: 0px;
    color: var(--mocassin700);
  }

  logo-box {
    display: block;
    padding: 10px 20px 0px 20px;
    text-decoration: none;
    white-space: nowrap;
    z-index: 9999;
  }

  h1 {
    color: var(--tan100);
    margin-bottom: 0px;
    margin-top: 12px;
    padding-bottom: 0px;
    letter-spacing: 3px;
    line-spacing: 0px;
    display: inline-block;
    font-family: "Twinton", monospace;
  }

  navigation {
    background: var(--slate700);
    display: block;
    justify-content: space-between;
    margin: 0;
    
  }

  navigation ul {
    display: flex;
    list-style-type: none;
    margin: 0;
    padding: 4px;
    justify-content: space-between;
  }
  .menu li {
    margin-right: 20px;
  }
  .menu li a:active,
  .menu li a:visited {
    color: var(--desert);
    text-decoration: none;
    width: 100%;
    padding: 10px 0;
  }
  .menu li a:hover {
    color: var(--desert);
    background-color: (--lilac900)
    padding: 3px 10px;
  }
</style>
