---
const { title, slug, description } = Astro.props;
import WeirdStripes from "./WeirdStripes.astro";
import Meta from "./Meta.astro"
---

<!doctype html>
<html lang="en">
  <head> 
  <Meta title={title} , description={description} />

  <style>
    html {
      height: 100%;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    article {
      display: grid;
      width: 100%;
    }

    p {
      color: var(--maroon700);
      font-family: "Poppins", sans-serif;
    }
  </style>
  <body>
    <div class="desert">

<header>

  <logo-box>
    <h1>TiMOTHY EATON</h1>
    <p>OPERATIONS MANAGEMENT</p>
  </logo-box> 
  <navigation>
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/resume">Resume</a></li>
      <li><a href="/uses">Uses</a></li>
    </ul>
  </navigation>
  
</header>
<WeirdStripes />
<style>


  header {
    background-color: var(--slate500);
    background-image: radial-gradient(at bottom left, var(--slate500) 50%,  var(--slate100) 95%);
    /* background-image: url(/background_head.gif); */
    color: var(--moccasin300);
    flex: none !important;
    width: 100%;
    height: 150px;
    display: block;
  }

  header p {
    padding: 0;
    margin-bottom: 0px;
    line-height: 0;
    margin-top: 0px;
    color: var(--mocassin700);
  }

  logo-box {
    display: block;
    padding: 10px 20px 0px 20px;
    text-decoration: none;
    white-space: nowrap;
    z-index: 9999;
  }

  h1 {
    color: var(--tan100);
    margin-bottom: 0px;
    margin-top: 12px;
    padding-bottom: 0px;
    letter-spacing: 3px;
    line-spacing: 0px;
    display: inline-block;
    font-family: "Twinton", monospace;
  }

  navigation {
    background: var(--slate700);
    display: block;
    justify-content: space-between;
    margin: 0;
    margin-top: 25px;
    
  }

  navigation ul {
    display: flex;
    list-style-type: none;
    margin: 4px;
    padding: 0 0 4px 0;
    justify-content: space-between;
  }
  .menu li {
    margin-right: 20px;
  }

  .menu li a {
    text-size: 120%;
    font-weight: bold;
    width: 100%;
    padding: 3px 20px;
    color: var(--desert);
  }
  .menu li a:active,
  .menu li a:visited {
    color: var(--desert);
    text-decoration: none;
    background-color: var(--slate300);
  }
  .menu li a:hover {
    color: var(--desert);
    background-color: var(--slate300);
    text-decoration: none;
  }

  bottom-gradient {
    clear: all;
    height: 70px;
    width: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0% 10%,
      var(--slate500) 10% 20%,
      transparent 20% 35%,
      var(--slate500) 35% 50%,
      transparent 50% 55%
    );

    header-fade {
      width: 100px;
      color: var(--slate500);
      border-top: 8px;
      padding-top: 5px;
      border-buttom: 1 px solid var(--slate500);
      padding-bottom: 3px;
    }

</style>
